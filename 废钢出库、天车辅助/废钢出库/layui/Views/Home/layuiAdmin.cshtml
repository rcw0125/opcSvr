
@{
    Layout = null;
    var testmenu = ViewBag.test;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>layuiback</title>
    <link href="~/plugin/layui/css/layui.css" type="text/css" rel="stylesheet"/> 
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">炼钢厂信息平台</div>
            <!-- 头部区域（可配合layui已有的水平导航） -->         
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="http://t.cn/RCzsdCq" class="layui-nav-img">
                        任春旺
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="">关闭</a></li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <div class="layui-nav layui-nav-tree" lay-filter="test">
                    @Html.Raw(testmenu);
                  
                </div>
            </div>
        </div>

        <div class="layui-body" style="padding: 15px;">
            <!-- 内容主体区域 -->
            <div id="mainContent">内容主体区域</div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © layui.com - 底部固定区域
        </div>
    </div>
    <script src="~/plugin/layui/layui.all.js" type="text/javascript"></script>
    @*<script src="~/plugin/layui/admin.js"></script>*@
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/plugin/requirejs/require.js"></script>
    <script type="text/javascript" src="~/plugin/requirejs/require.config.js"></script>
    @*<script type="text/javascript" src="~/Scripts/submenu.js"></script>*@
    <script>
        //JavaScript代码区域
        //layui.use('element', function () {
        //    var element = layui.element;

        //});
        function jump(url) {
            require(["../Scripts" + url], function (module) {                
                var content = document.getElementById("mainContent");
                $(content).append(module.color);
                module.init(content);
            });

        }      
    </script>
</body>
</html>
